<% layout('panel') -%>
<div class="col-md-12">
    <div class="card card-default">
        <div class="card-body">
            <div > <!--            Enter Your Content Here-->
                <% if (users.length > 0) { %>
                    <table id="pT" class="table table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone Number</th>
                            <th>Title</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% for (var i = 0; i < users.length; i++) { %>
                                <tr>
                                    <td><%= users[i].Name   %></td>
                                    <td><%= users[i].Email  %></td>
                                    <td><%= users[i].Phone  %></td>
                                    <td><%= users[i].Title  %></td>
                                    <td>
                                        <form action="/auth/delete" method="post">
                                            <input type="text" name="usersID" value="<%= users[i].id %>" hidden>
                                            <button type="submit" class="btn btn-block btn-danger">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                        <% } %>
                        </tbody>
                    </table>
                <% } else { %>
                    <h1> 0 Personnel Found </h1>
                <% } %>
            </div>                 <!--            Enter Your Content Here-->
        </div>
    </div>
</div>
<% block('css').append('<link rel="stylesheet" href="/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">') %>
<% block('css').append('<link rel="stylesheet" href="/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">') %>
<% block('js').append('<script src="/plugins/datatables/jquery.dataTables.min.js"></script>') %>
<% block('js').append('<script src="/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>') %>
<% block('js').append('<script src="/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>') %>

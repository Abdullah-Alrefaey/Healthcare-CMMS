<% layout('panel') -%>
<div class="col-md-12">
    <div class="card card-success">
        <div class="card-body">
            <div class="card-header">
                <h3 class="card-title">
                    All Departments
                </h3>
                <% if (user.isAdmin) { %>
                    <div class="table-buttons">
                        <!-- Add New Department Button -->
                        <a type="button" class="btn btn-block btn-primary" href="/departments/add">Add New
                            Department</a>
                        <!-- Delete All The Department Button -->
                        <a type="button" class="btn btn-block btn-danger" href="/departments/deleteAll">Erase
                            Database</a>
                    </div>
                <% } %>
            </div>
            <div class="row">
                <!-- Check length of departments list -->
                <!-- In case we found departments -->
                <% if (departments.length > 0) { %>
                    <!-- Departments Table -->
                    <table id="departmentsTable" class="table table-bordered table-hover table-striped col-md-12">
                        <!-- Headers -->
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th></th>
                        </tr>
                        </thead>
                        <!-- /Headers -->

                                <!-- Table Rows -->
                                <tbody>
                                <% for(var i=0; i<departments.length; i++) {%>
                                    <tr>
                                        <td><%= departments[i].id %></td>
                                        <td><%= departments[i].Name %></td>
                                        <td><form action="/departments/delete" method="post">
                                                <input type="text" name="departmentID" value="<%= departments[i].id%>" hidden>
                                                <button type="submit" class="btn btn-block btn-danger">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                <% } %>

                                </tbody>
                                <!-- /Table Rows -->

                            </table>

                <% }else{ %>
                    <h1>No Departments Found</h1>
                <% } %>

                <!--            Enter Your Content Here-->
            </div>
        </div>
    </div>
</div>
<% block('css').append('<link rel="stylesheet" href="/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">') %>
<% block('css').append('<link rel="stylesheet" href="/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">') %>
<% block('js').append('<script src="/plugins/datatables/jquery.dataTables.min.js"></script>') %>
<% block('js').append('<script src="/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>') %>
<% block('js').append('<script src="/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>') %>
<% block('js').append('<script src="/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>') %>

<div class="card card-warning">
    <div class="card-header">
        <h3 class="card-title">Alert/Repair</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <form role="form" method="POST" action="/dailyorder">
            <div class="row">

                <div class="col-sm-6">
                    <!-- text input -->
                    <div class="form-group">
                        <label>Department</label>
                        <input type="text" name="dep" class="form-control" placeholder="Department ...">
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="form-group">
                        <label> Device </label>
                        <input type="text" class="form-control" placeholder="Device ...">
                    </div>
                </div>

            </div>

            <!-- textarea -->
            <div class="form-group">
                <label><i class="far fa-times-circle"></i> Description </label>
                <textarea class="form-control" name="description" rows="3" placeholder="Describe the Alert Cause ..."></textarea>
            </div>


            <div class="row">
                <label><i class="far fa-bell"></i> Action Taken :</label>
                <!-- checkbox -->
                <div class="form-group">

                    <div class="form-check">
                        <input class="form-check-input" type="checkbox">
                        <label class="form-check-label"> Systematic Repair </label>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" type="checkbox">
                        <label class="form-check-label"> Part Replaced </label>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" disabled>
                        <label class="form-check-label">Checkbox disabled</label>
                    </div>

                    <div class="form-group">
                        <label><i class="far fa-times-circle"></i> Comments </label>
                        <textarea class="form-control" name="action" rows="3" placeholder="Describe the Actions taken ..."></textarea>
                    </div>

                </div>
            </div>
        </form>
    </div>
    <!-- /.card-body -->
</div>
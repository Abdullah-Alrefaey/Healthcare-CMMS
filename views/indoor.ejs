<% layout('panel') -%>
<div class="col-md-12">
    <div class="card card-default">
        <div class="card-body">
            <div class="card-header">
                <h3 class="card-title">
                    <%= title %>
                </h3>
            </div>
            <div class = "center">
                <div class="content-wrapper">
                    <!-- Content Header (Page header) -->
                    <section class="content-header">
                        <div class="container-fluid">
                            <div class="row mb-2">
                                <div class="col-sm-6">
                                    <h1>Indoor Personnel</h1>
                                </div>
                            </div>
                        </div><!-- /.container-fluid -->
                    </section>
                    <!-- Main content -->
                    <section class="content">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="card card-primary">
                                    <div class="card-header">
                                        <h3 class="card-title">Add Personnel</h3>
                                        <div class="card-tools">
                                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                                <i class="fas fa-minus"></i></button>
                                        </div>
                                    </div>
                                    <form action="#" method="POST">
                                        <div class="card-body">
                                            <div class="form-group">
                                                <label for="personName">First Name</label>
                                                <input type="text" name="lname" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label for="personName">Last Name</label>
                                                <input type="text" name="fname" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label for="personSSN">Birthday date </label>
                                                <input type="date" name="bdate" class="form-control">
                                            </div>

                                            <div class="form-group">
                                                <label for="inputStatus">Role</label>
                                                <select class="form-control custom-select">
                                                    <option selected disabled>Select one</option>
                                                    <option>Technician</option>
                                                    <option>Engineer</option>
                                                    <option>Admin</option>
                                                </select>
                                            </div>
                                            <input type="submit" value="Create new Porject" class="btn btn-success float-right">
                                            <a class="btn btn-app">
                                                <i class="fas fa-save"></i> Save
                                            </a>
                                        </div>
                                    </form>
                                    <!-- /.card-body -->
                                </div>
                                <!-- /.card -->
                            </div>
                        <div class="row">
                            <div class="col-12">
                                <input type="submit" value="Show Personnel" class="btn btn-success float-right">
                            </div>
                        </div>
                    </section>
                    <!-- /.content -->
                </div>
            </div>
        </div>
    </div>
</div>

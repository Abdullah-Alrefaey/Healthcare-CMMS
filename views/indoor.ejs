<% layout('panel') -%>
<div class="col-md-12">
    <div class="card card-default">
        <div class="card-body">
            <div class="card-header">
                <h3 class="card-title">
                    <%= title %>
                </h3>
            </div>
            <div >
                <!--            Enter Your Content Here-->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Add Person</h3>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                <i class="fas fa-minus"></i></button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="personName">First Name</label>
                            <input type="text" name="lname" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="personName">Last Name</label>
                            <input type="text" name="fname" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="personSSN">Birthday date </label>
                            <input type="date" name="bdate" class="form-control">
                        </div>

                        <div class="form-group">
                            <label for="inputStatus">Role</label>
                            <select class="form-control custom-select">
                                <option selected disabled>Select one</option>
                                <option>Technician</option>
                                <option>Engineer</option>
                                <option>Admin</option>
                            </select>
                        </div>

                        <button type="submit" class="btn btn-app btn btn-success float-right">
                            <i class="fas fa-save"></i> Save
                        </button>
                    </div> <!-- /.card-body -->
                </div>  <!-- /.card -->
                <div class="col-md-6">
                    <a type="button" class="btn btn-success float-right" href="/indoor/show">
                        <i class="fas fa-users" ></i> Show All Personnel
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


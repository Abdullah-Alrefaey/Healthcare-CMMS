<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="/" class="brand-link">
        <img src="/images/logo.png" alt="CMMS Logo" class="brand-image img-circle elevation-3"
             style="opacity: .8">
        <span class="brand-text font-weight-light">Member's Portal</span>
    </a>
    <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="/profiles/<%= user.Photo %>" class="img-circle elevation-2" style="width: 2.8rem"
                     alt="User Image">
            </div>
            <div class="info">
                <a class="d-block"><%= user.Name %></a>
                <p style="font-size: 0.8rem; color: #d0d0d0; margin: 0;"><%= user.Title %></p>
            </div>
        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Add icons to the links using the .nav-icon class
                     with font-awesome or any other icon font library -->
                <% if(user.isAdmin) { %>
                <li class="nav-item has-treeview <% if (title === 'Add User' || title === 'Show All Personnel') { %>menu-open<% } %>">
                    <a href="#"
                       class="nav-link <% if (title === 'Add User' || title === 'Show All Personnel') { %>active<% } %>">
                        <i class="nav-icon fas fa-user-shield"></i>
                        <p>
                            Admin
                            <i class="right fas fa-angle-left"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item ">
                            <a href="/indoor/show"
                               class="nav-link <% if (title === 'Show All Personnel') { %>active<% } %>">
                                <i class="nav-icon fas fa-users"></i>
                                <p>
                                    Users List
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/indoor" class="nav-link <% if (title === 'Add User') { %>active<% } %>">
                                <i class="nav-icon fas fa-user-plus"></i>
                                <p>
                                    Add User
                                </p>
                            </a>
                        </li>
                    </ul>
                </li>
                <% } %>

                <!--  Devices Link  -->
                <li class="nav-item">
                    <a href="/devices" class="nav-link <% if (title === 'Devices List') { %>active<% } %>">
                        <i class="fas fa-stethoscope nav-icon "></i>
                        <p>Devices</p>
                    </a>
                </li>

                <!--  Departments Link  -->
                <li class="nav-item">
                    <a href="/departments" class="nav-link <% if (title === 'Departments List') { %>active<% } %>">
                        <i class="fas fa-building nav-icon "></i>
                        <p>Departments</p>
                    </a>
                </li>

                <!--  Individuals Link  -->
                <% if (!user.isAdmin) { %>
                <li class="nav-item">
                    <a href="/indoor/show" class="nav-link <% if (title === 'Show All Personnel') { %>active<% } %>">
                        <i class="fas fa-users nav-icon "></i>
                        <p>Individuals</p>
                    </a>
                </li>
                <% } %>

                <!--  Parts Link  -->
                <li class="nav-item">
                    <a href="/parts" class="nav-link <% if (title === 'Parts List') { %>active<% } %>">
                        <i class="fas fa-microchip nav-icon"></i>
                        <p>Parts</p>
                    </a>
                </li>

                <li class="nav-item">
                    <a href="/workorder" class="nav-link <% if (title === 'Work list') { %>active<% } %>">
                        <i class="nav-icon fas fa-edit"></i>
                        <p>Work Order</p>
                    </a>
                </li>

                <!--  Add WorkOrder  -->
                <% if (user.isAdmin) { %>
                <li class="nav-item">
                    <a href="/workorder/add" class="nav-link <% if (title === 'New Work Order') { %>active<% } %>">
                        <i class="fas fa-file-medical nav-icon"></i>
                        <p>Add Work Order</p>
                    </a>
                </li>
                <% } %>

                <!--  Reports Link  -->
                <li class="nav-item">
                    <a href="/reports/createReport"
                       class="nav-link <% if (title === 'Reports Extraction') { %>active<% } %>">
                        <i class="fas fa-file nav-icon"></i>
                        <p>Reports</p>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
</aside>
<% layout('panel') -%>
<div class="col-md-12">
    <div class="card card-default">
        <div class="card-body">

            <% if (report.length > 0) { %>

                <blockquote class="blockquote text-center">
                    <p class="mb-0"><%= report[0].type %> Detailed Report </p>
                    <p class="mb-1"> <%= user.Name %> From : <%= report[0].dataValues.Department.Name %> </p>
                    <p> Created At : <%= report[0].createdAt %></p>
                    <footer class="blockquote-footer"><cite title="Source Title">Extra Cool CMMS</cite></footer>
                </blockquote>
                <% console.log(report); %>
                <% console.log(report[0].type); %>


                <!--    Alert        -->
                <% if (report[0].type === "Repair") { %>
                        <% console.log("repair")%>
                        <% include repair.ejs %>
                <% } %>
                <!--    Daily        -->
                <% if (report.type === "Daily") { %>
                        <% console.log("daily")%>
                        <% include daily.ejs%>
                <% } %>
                <!--    PPM        -->
                <% if (report.type === "PPM") { %>
                        <% console.log("ppm") %>
                        <% include ppm.ejs%>
                <% } %>

                <script type="text/javascript">
                    window.addEventListener("load", window.print());

                </script>
            <% } else {%>
                <h1> NO RESULTS FOUND</h1>
            <% } %>
        </div>
    </div>
</div>
